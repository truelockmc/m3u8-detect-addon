{
  "manifest_version": 3,
  "name": "M3U8 Link Finder",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
  "scripts": ["background.js"],
  "service_worker": "background.js"

  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": { "id": "{12345678-abcd-1234-abcd-1234567890ab}" }
  }
}
